<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay đổi mật khẩu"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_span1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu hiện tại"
        android:gravity="center|left"
        android:layout_alignLeft="@id/et_current_password"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txt_header"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_current_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_span1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_radius"
        android:textColorHint="#FFB3B3B3"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:hint="Nhập mật khẩu hiện tại" />

    <TextView
        android:id="@+id/txt_span2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới"
        android:gravity="center|left"
        android:layout_alignLeft="@id/et_new_password"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_current_password"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_span2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_radius"
        android:textColorHint="#FFB3B3B3"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:hint="Nhập mật khẩu mới" />

    <TextView
        android:id="@+id/txt_span3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu mới"
        android:gravity="center|left"
        android:layout_alignLeft="@id/et_conform_password"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_new_password"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_conform_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_span3"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_radius"
        android:textColorHint="#FFB3B3B3"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:hint="Nhập lại mật khẩu mới" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_conform_password"
        android:background="@drawable/button_radius"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="11sp"
        android:text="Cập nhập"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_update"
        android:layout_alignBottom="@+id/btn_update"
        android:layout_toRightOf="@+id/btn_update"
        android:background="@drawable/button_radius"
        android:layout_marginLeft="40dp"
        android:textSize="11sp"
        android:text="Hủy bỏ"/>

</RelativeLayout>