<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    android:background="@color/blue_300">

    <RelativeLayout
        android:id="@+id/l_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_menu_24"/>

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="|"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_span"
            android:layout_alignBottom="@+id/tv_span"
            android:layout_alignTop="@+id/tv_span"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="Trang chủ"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_span"
            android:layout_alignBottom="@+id/tv_span"
            android:layout_alignTop="@+id/tv_span"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="Quản lý"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_radius"
        android:layout_below="@+id/l_top">

        <RelativeLayout
            android:id="@+id/l_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="#3CB043"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_aquarium"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/aquarium"
                android:layout_centerVertical="true"
                android:layout_margin="14dp"/>

            <TextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quản lý bể cá"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/iv_aquarium"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l_device"
            android:background="@drawable/button_radius"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="#FA8128"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_margin="14dp"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quản lý tài khoản"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/iv_account"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>